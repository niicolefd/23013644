#include <stdio.h>

int main() {
    int visitantes;
    
    // Solicita o numero de visitantes ao recepcionista
    printf("Informe o numero de visitantes que entraram na empresa hoje: ");
    scanf("%i", &visitantes);

    // Exibe uma mensagem de confirmacao
    printf("Numero de visitantes registrados: %i\n", visitantes);
    printf("Registro concluido com sucesso.\n");

    return 0;
    
}
