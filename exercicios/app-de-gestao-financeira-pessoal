#include <stdio.h>

int main() {
    float receita, despesa, saldo;

    // Solicita ao usuario a receita
    printf("Insira o valor da receita: ");
    scanf("%f", &receita);

    // Solicita ao usuario a despesa
    printf("Infome o valor da despesa: ");
    scanf("%f", &despesa);

    // Calcula o saldo
    saldo = receita - despesa;

    // Exibe o saldo atualizado
    printf("Saldo atualizado: %.2f\n", saldo);

    return 0;

}
