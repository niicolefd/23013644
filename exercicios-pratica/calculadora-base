#include <stdio.h>

int main() {
    float num1, num2;
    
    printf("Digite o primeiro numero: ");
    scanf("%f", &num1);
    printf("Digite o segundo numero: ");
    scanf("%f", &num2);
    
    printf("A soma e %.2f\n", num1 + num2);
    printf("A subtracao e %.2f\n", num1 - num2);
    printf("A multiplicacao e %.2f\n", num1 * num2);
    printf("A divisao e %.2f\n", num1 / num2);

return 0;
}
