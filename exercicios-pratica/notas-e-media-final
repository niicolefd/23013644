#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main() {
    float nota1, nota2, nota3, media;
    
    printf("Digite sua nota1: ");
    scanf("%f", &nota1);
    
    printf("Digite sua nota2: ");
    scanf("%f", &nota2);
    
    printf("Digite sua nota3: ");
    scanf("%f", &nota3);
    
    media = (nota1+nota2+nota3)/3;
    printf("Sua media e: %.1f\n", media);

    if (media >= 5) {
        printf ("Parabens voce foi aprovado", media);
    }

    else {
        printf ("Infelizmente voce foi reprovado", media);
    }
    
    return (0);
}
