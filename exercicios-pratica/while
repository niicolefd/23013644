#include<stdio.h>

int main() {
    int num1, num2, n;
    
    num1=1;
    printf("Imprimir os números de 1 até 50:\n\n");
    
    while (num1 <= 50) {
        printf("%d\n", num1);
        num1++;
    }

// Exercício 2: Imprima os números na forma decrescente 50, 49, ...1
    
    num2=50;
    printf("\n Imprimir os números de 50 até 1:\n\n");
    
    while (num2 >= 1) {
        printf("%d\n",num2);
        num2--;
    }
    
// Exercício 3: Permita que o usuário digite o número inicial, e mostre em ordem decrescente até 0;

    printf ("\n Escreva um número maior que 0: ");
    scanf ("%d", &n);
    
    while (n >= 0) {
        printf ("\n%d", n);
        n--;
    }

return 0;
}
