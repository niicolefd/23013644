#include <stdio.h>
#include <stdlib.h>

int main() {
    int a, b=10, i;
    
    printf("Digite um valor inteiro: ");
    scanf("%d", &a);
    
    do {
        printf("%d\n", a);
        a++;
    }
    
    while(a<b);
    
    do {
        printf("Escolha uma opção:\n");
        printf("(1) Opção 1\n");
        printf("(2) Opção 2\n");
        printf("(3) Opção 3\n");
        scanf("%d", &i);
        
        if(i<1 || i>3) {
            printf("Opção invalida!, Escolha uma das opções abaixo!\n");
        }
    }
    
    while((i<1) || (i>3));
    
    printf("Você escolheu a opção %d\n", i);
    
return 0;
}
