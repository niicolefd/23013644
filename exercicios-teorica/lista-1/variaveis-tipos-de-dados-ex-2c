#include <stdio.h>

int main() {
    char nome[50];
    int idade, diasdevida;
    
    printf("Digite seu nome: ");
    scanf("%s", nome);
    printf("Digite sua idade: ");
    scanf("%i", &idade);
    
    diasdevida = idade * 365;
    printf("%s, voce viveu aproximadamente %i dias.", nome, diasdevida);
    
    return 0;
}
