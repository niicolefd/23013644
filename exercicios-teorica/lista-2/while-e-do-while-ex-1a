#include <stdio.h>

int main() {
    float temperatura;
    
    while (1) {
        printf("Digite a temperatura atual em 째C: ");
        scanf("%f", &temperatura);
        
        if (temperatura < 20.0 || temperatura > 25.0) {
            printf("\nAlerta! Temperatura fora da faixa segura: %.2f째C\n\n", temperatura);
        } else {
            printf("\nTemperatura dentro da faixa segura: %.2f째C\n\n", temperatura);
        }
        printf("Aguardando pr처ximo monitoramento...\n\n");
    }
    return 0;
}
