#include <stdio.h>

int main() {
    float temperatura;
    
    while (1) {
        printf("Digite a temperatura atual (em 째C): ");
        scanf("%f", &temperatura);
        
        if (temperatura < 20.0 || temperatura > 25.0) {
            printf("Alerta! Temperatura fora da faixa segura: %.2f째C\n", temperatura);
        } else {
            printf("Temperatura dentro da faixa segura: %.2f째C\n", temperatura);
        }
        printf("\nAguardando pr처ximo monitoramento...\n\n");
    }
    return 0;
}
